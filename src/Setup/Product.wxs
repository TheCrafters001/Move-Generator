<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi" xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">
	<?define Move Generator_TargetDir=$(var.Move Generator.TargetDir)?>
	<Product Id="*" Name="Move Generator" Language="1033" Version="1.0.0.0" Manufacturer="TheCrafters001" UpgradeCode="3e3a7235-55c8-480f-9876-c0b3cc279c87">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<!-- Define Link -->
		<Property Id="ARPHELPLINK" Value="https://thecrafters001.github.io/software/"/>
		<Property Id="ARPURLINFOABOUT" Value="https://thecrafters001.github.io/software/"/>

		<!-- Define Downgrade message & EmbedCab -->
		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate EmbedCab="yes" />
		<!-- UI Customization -->
		<UI>
			<!-- Define UI -->
			<UIRef Id="WixUI_Simple" />
			<UIRef Id="WixUI_ErrorProgressText" />
			<Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
			<Publish Dialog="ExitDialog" Control="Finish" Event="DoAction" Value="LaunchApplication">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Publish>
		</UI>
		<Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch Move Generator" />
		<Property Id="WixShellExecTarget" Value="[#Move_Generator.exe]" />
		<CustomAction Id="LaunchApplication" BinaryKey="WixCA" DllEntry="WixShellExec" Impersonate="yes" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
		<MediaTemplate />

		<Feature Id="ProductFeature" Title="Setup" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
				<Directory Id="TheCrafters001Folder" Name="TheCrafters001">
					<Directory Id="INSTALLFOLDER" Name="Move Generator" />
				</Directory>
			</Directory>
			<Directory Id="ProgramMenuFolder">
				<Directory Id="ApplicationProgramsFolder" Name="Move Generator" />
			</Directory>
		</Directory>
	</Fragment>

	<!-- Shortcut & Registry -->
	<Fragment>
		<DirectoryRef Id="ApplicationProgramsFolder">
			<Component Id="ApplicationShortcut" Guid="f177928a-bd0e-4d7d-bbe1-53c62e0c0a97">
				<Shortcut Id="ApplicationStartMenuShortcut" Name="Easy Software Suite" Description="Move Generator" Target="[INSTALLFOLDER]Move Generator.exe" WorkingDirectory="INSTALLFOLDER" />
				<RemoveFolder Id="RemoveApplicationProgramsFolder" Directory="ApplicationProgramsFolder" On="uninstall" />
				<RegistryValue Root="HKCU" Key="Software\TheCrafters001\Move Generator" Name="installed" Type="integer" Value="1" KeyPath="yes" />
			</Component>
		</DirectoryRef>
	</Fragment>
	
	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
			<!-- TODO: Remove the comments around this Component element and the ComponentRef below in order to add resources to this installer. -->
			<!-- <Component Id="ProductComponent"> -->
				<!-- TODO: Insert files, registry keys, and other resources here. -->
			<!-- </Component> -->
			<Component Id="Move_Generator.runtimeconfig.json" Guid="007fd5c8-c914-40b8-a797-ab37504ab5cb">
			  <File Id="Move_Generator.runtimeconfig.json" Name="Move Generator.runtimeconfig.json" Source="$(var.Move Generator_TargetDir)Move Generator.runtimeconfig.json" />
			</Component>
			<Component Id="Move_Generator.dll" Guid="29d4aa8a-b18c-4617-bdd1-9c3e5f10521f">
			  <File Id="Move_Generator.dll" Name="Move Generator.dll" Source="$(var.Move Generator_TargetDir)Move Generator.dll" />
			</Component>
			<Component Id="Move_Generator.exe" Guid="74d969b3-e815-43ea-8f0a-ea7c6ab983ac">
				<File Id="Move_Generator.exe" Name="Move Generator.exe" Source="$(var.Move Generator_TargetDir)Move Generator.exe" />
			</Component>
			<Component Id="Move_Generator.dll" Guid="3b5349ac-c59a-40d5-afd4-56a0faa846dd">
				<File Id="Move_Generator.deps.json" Name="Move Generator.deps.json" Source="$(var.Move Generator_TargetDir)Move Generator.deps.json" />
			</Component>
		</ComponentGroup>
	</Fragment>
</Wix>
